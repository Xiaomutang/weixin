/* pages/detail/detail.wxss */
/* 添加详情信息的样式 */
.info {
  width: 100%;
  border-bottom: 10rpx solid #ccc;
  padding: 10rpx;
}

.info view {
  font-size: 30rpx;
}

.info .p {
  margin: 10rpx 0;
  color: #666;
}

.info .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}


/* 评论列表的样式 */
.comments-item {
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  font-size: 30rpx;
  padding: 10rpx 0;
}

.comments-item .title {
  display: flex;
  flex-wrap: nowrap;
}

.comments-item .title .left {
  width: 500rpx;
  flex-grow: 2;
  font-size: 40rpx;
  line-height: 2;
}

.comments-item .title .right {
  width: 250rpx;
  flex-grow: 1;
  text-align: right;
}
.comments-item .title .score {
  color: orange;
}


.comments-item image {
  float: left;
  width: 160rpx;
  height: 160rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.clear {
  clear: both;
  margin-bottom: 20rpx;
}